{
    "compilerOptions": {
        "outDir": "./src/js/",
        "allowJs": true,
        "target": "es6",
        "module": "NodeNext",
        "lib": [
            "ES2017",
            "dom"
        ],
        "moduleResolution": "NodeNext",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "bootstrap"
        ]
    },
    "include": [
        "./node_modules/@types",
        "./src/ts/*"
    ],
    "exclude": [
        "./src/ts/types.ts"
    ]
}